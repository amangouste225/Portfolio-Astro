---

interface Props {
	name : string;
    para?: string;
	align ?: 'start' | undefined
}

const {name, para } = Astro.props;
---

<div class="flex flex-col md:text-center text-left gap-3 justify-center my-10">
	<h2 class="name"> {name}</h2>
	<slot />
</div>

<style>
.name{
	font-size: var(--text-lg);
	line-height: 1.5
}

@media (min-width: 50em){
.name{
	font-size: var(--text-3xl);
	line-height: 1.5
}
}

</style>