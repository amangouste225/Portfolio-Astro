---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Header from '../components/Header.astro';
import Grid from '../components/Grid.astro';

const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout
	title="My Work | Amangoua Ange"
	description="Learn about Amangoua Ange's most recent projects"
>
	<div class="stack gap-20" data-scroll-container>
		<main class="wrapper stack gap-8" data-scroll-section>
			<Header name='recents projects' para='See my most recent projects below to get an idea of my past experience' data-scroll data-scroll-speed="1"/>
			<Grid variant="offset">
				{
					projects.map((project) => (
						<li>
							<PortfolioPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>
